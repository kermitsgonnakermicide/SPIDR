<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="test_world">
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>
    <plugin filename="libgz-sim-physics-system.so" name="gz::sim::systems::Physics"></plugin>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"></plugin>
    <plugin filename="libgz-sim-scene-broadcaster-system.so" name="gz::sim::systems::SceneBroadcaster"></plugin>

    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry><plane><normal>0 0 1</normal><size>100 100</size></plane></geometry>
        </collision>
        <visual name="visual">
          <geometry><plane><normal>0 0 1</normal><size>100 100</size></plane></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- NEW OBSTACLE COURSE -->
    
    <!-- Entry Pillars -->
    <model name="pillar_left">
      <pose>2 1.5 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.5 0.5 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.5 0.5 1</size></box></geometry>
        <material><ambient>0.7 0.2 0.2 1</ambient><diffuse>0.7 0.2 0.2 1</diffuse></material></visual>
      </link>
    </model>

    <model name="pillar_right">
      <pose>2 -1.5 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.5 0.5 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.5 0.5 1</size></box></geometry>
        <material><ambient>0.7 0.2 0.2 1</ambient><diffuse>0.7 0.2 0.2 1</diffuse></material></visual>
      </link>
    </model>

    <!-- Mid-Field Scatter -->
    <model name="scatter_1">
      <pose>4 0 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><cylinder><radius>0.3</radius><length>1</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.3</radius><length>1</length></cylinder></geometry>
        <material><ambient>0.2 0.7 0.2 1</ambient><diffuse>0.2 0.7 0.2 1</diffuse></material></visual>
      </link>
    </model>

    <model name="scatter_2">
      <pose>5 2.5 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.8 0.2 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.8 0.2 1</size></box></geometry>
        <material><ambient>0.2 0.2 0.7 1</ambient><diffuse>0.2 0.2 0.7 1</diffuse></material></visual>
      </link>
    </model>

    <model name="scatter_3">
      <pose>5 -2.5 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.8 0.2 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.8 0.2 1</size></box></geometry>
        <material><ambient>0.2 0.2 0.7 1</ambient><diffuse>0.2 0.2 0.7 1</diffuse></material></visual>
      </link>
    </model>

    <!-- The "L-Wall" Room -->
    <model name="wall_short">
      <pose>7 1 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.1 3.0 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.1 3.0 1</size></box></geometry>
        <material><ambient>0.6 0.6 0.6 1</ambient><diffuse>0.6 0.6 0.6 1</diffuse></material></visual>
      </link>
    </model>

    <model name="wall_long">
      <pose>8.5 2.5 0.5 0 0 1.57</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><box><size>0.1 3.0 1</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>0.1 3.0 1</size></box></geometry>
        <material><ambient>0.6 0.6 0.6 1</ambient><diffuse>0.6 0.6 0.6 1</diffuse></material></visual>
      </link>
    </model>

    <!-- High Feature Pillar -->
    <model name="tower">
      <pose>10 0 2 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="c"><geometry><cylinder><radius>0.1</radius><length>4</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.1</radius><length>4</length></cylinder></geometry>
        <material><ambient>1 1 0 1</ambient><diffuse>1 1 0 1</diffuse></material></visual>
      </link>
    </model>

  </world>
</sdf>
